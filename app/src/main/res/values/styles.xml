<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--http://android-developers.blogspot.ru/2014/10/appcompat-v21-material-design-for-pre.html-->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="toolbarStyle">@style/ToolBarStyle</item>
    </style>

    <style name="ToolBarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="theme">@style/ToolbarTheme</item>
    </style>

    <style name="ToolbarTheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="titleTextAppearance">@style/ActionBarTextAppearance</item>
        <item name="titleMarginStart">10dp</item>
        <item name="colorPrimary">@color/action_bar_bg</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="navigationIcon">@drawable/abc_ic_menu_paste_mtrl_am_alpha</item>
        <item name="toolbarNavigationButtonStyle">@style/NavigationBtnBtnStyle</item>>
        <item name="actionButtonStyle">@style/ActionBtnStyle</item>
    </style>

    <style name="NavigationBtnBtnStyle" parent="@style/Widget.AppCompat.ActionButton">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/action_btn_bg</item>
    </style>

    <style name="ActionBtnStyle" parent="@style/Widget.AppCompat.ActionButton">
        <item name="android:background">@drawable/action_btn_bg</item>
    </style>

    <style name="ActionBarTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">24sp</item>
    </style>

    <color name="action_bar_bg">#168DE2</color>
    <color name="accent">#188AD0</color>
    <color name="title_color">#FF00FF</color>
    <color name="red">#FF00FF</color>
    <color name="blue">#37FFC9</color>
    <color name="yellow">#fcc62e</color>
    <color name="transparent">@android:color/transparent</color>
    <color name="action_bar_selected_btn_color">#05FFFFFF</color>

</resources>
